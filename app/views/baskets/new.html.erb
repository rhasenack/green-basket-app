<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-6">
      <div class="devise-form-box gradient-bg">
        <h2>Nova Cesta</h2>
        <%= simple_form_for @basket do |f|  %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :price %>
            <%= f.input :description %>
            <%= f.input :stock %>
            <%= f.input :pickup_min %>
            <%= f.input :pickup_max %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Add Basket"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
